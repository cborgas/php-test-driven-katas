{
    "name": "cborgas/php-test-driven-katas",
    "description": "Test-Driven Development (TDD) Katas in PHP",
    "type": "project",
    "authors": [
        {
            "name": "Carl Borgas",
            "email": "carlborgas@gmail.com"
        }
    ],
    "config": {
        "platform": {
            "php": "8.1"
        }
    },
    "autoload": {
        "psr-4": {
            "TennisMatch\\": "katas/tennis-match/src/TennisMatch/",
            "Queue\\": "katas/queue/src/Queue/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit"
    }
}
